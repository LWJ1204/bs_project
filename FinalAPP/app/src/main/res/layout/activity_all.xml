<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ALL_Activity">

    <LinearLayout
        android:id="@+id/all_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:minHeight="60dp"
        android:background="#B8C7EF"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/MyTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:letterSpacing="0.4"
            android:text="我的课程"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/all_frame"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_top"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/all_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageButton
                android:id="@+id/classes_imagebtn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:src="@drawable/select_class_shape"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:background="@color/white"
                android:contentDescription="课程"
                />
            <TextView
                android:id="@+id/class_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="我的课程"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="center"
        />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageButton
                android:id="@+id/message_imagebtn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/select_msg_shape"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:background="@color/white"
                android:contentDescription="消息"
                />
            <TextView
                android:id="@+id/message_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="我的消息"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="center"
                />


            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/person_imagebtn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:minHeight="48dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:contentDescription="信息"
                android:scaleType="fitCenter"
                android:src="@drawable/select_person_shape" />

            <TextView
                android:id="@+id/person_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="我的信息"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="center"
                />



        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>